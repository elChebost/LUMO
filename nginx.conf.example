# Backend API
server {
    listen 80;
    # listen 443 ssl http2;  # Descomentar después de configurar SSL
    server_name api.tu-dominio.com;
    
    # SSL Configuration (descomentar después de obtener certificados)
    # ssl_certificate /etc/letsencrypt/live/api.tu-dominio.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/api.tu-dominio.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Logs
    access_log /var/log/nginx/lumo-api-access.log;
    error_log /var/log/nginx/lumo-api-error.log;

    # Configuración de proxy para el backend
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Cache
        proxy_cache_bypass $http_upgrade;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://localhost:3000/health;
        access_log off;
    }

    # Uploads (archivos estáticos)
    location /uploads {
        proxy_pass http://localhost:3000/uploads;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}

# Frontend Application
server {
    listen 80;
    # listen 443 ssl http2;  # Descomentar después de configurar SSL
    server_name lumo.tu-dominio.com www.lumo.tu-dominio.com;
    
    # SSL Configuration (descomentar después de obtener certificados)
    # ssl_certificate /etc/letsencrypt/live/lumo.tu-dominio.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/lumo.tu-dominio.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Logs
    access_log /var/log/nginx/lumo-frontend-access.log;
    error_log /var/log/nginx/lumo-frontend-error.log;

    # Root del frontend construido
    root /home/TU_USUARIO/LUMO/frontend/dist;
    index index.html;

    # Servir archivos estáticos
    location / {
        try_files $uri $uri/ /index.html;
        
        # Cache para assets estáticos
        location ~* \.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # Proxy para el API (opcional, si prefieres todo bajo un dominio)
    location /api {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Seguridad
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Tamaño máximo de subida
    client_max_body_size 10M;
}

# Configuración adicional para manejo de www
server {
    listen 80;
    server_name www.lumo.tu-dominio.com;
    return 301 $scheme://lumo.tu-dominio.com$request_uri;
}
